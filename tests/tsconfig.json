{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "types": ["hardhat"],
    "baseUrl": "./cypress",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"],
      "@ui": ["../packages/ui/src/index.ts"],
      "@ui/*": ["../packages/ui/src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "cypress/types/**/*.d.ts",
    "cypress.config.ts",
    "hardhat.config.js",
    "runHardhatNodes.js",
    "killHardhatNodes.js"
  ]
}
