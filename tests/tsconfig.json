  "compilerOptions": {
    "types": [],
    "baseUrl": "./cypress",
    "paths": {
      "@/*": ["../../apps/main/src/*"],
      "@cy/*": ["*"],
      "@ui": ["../../packages/ui/src/index.ts"],
