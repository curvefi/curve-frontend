{
  "name": "tests",
  "version": "0.1.0",
  "description": "Curve DApp tests",
  "license": "MIT",
  "main": "index.js",
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "run:nodes": "node runHardhatNodes.js",
    "kill:nodes": "node killHardhatNodes.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "vitest:watch": "vitest --watch",
    "cy:open:e2e": "cypress open --e2e",
    "cy:run:e2e": "wait-on http://localhost:3000 --timeout 1m && cypress run --e2e",
    "cy:open:component": "cypress open --component",
    "cy:run:component": "cypress run --component --spec 'cypress/component/**/!(*.rpc).cy.{ts,tsx}'",
    "cy:run:rpc": "cypress run --component --spec 'cypress/component/**/*.rpc.cy.{ts,tsx}'"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/vite-dev-server": "^7.0.0",
    "@types/cypress": "^1.1.6",
    "@types/wait-on": "^5.3.4",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "cypress": "^15.0.0",
    "dotenv-flow": "^4.1.0",
    "ethers": "*",
    "hardhat": "^3.0.2",
    "typescript": "*",
    "vite": "*",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "*",
    "wait-on": "^8.0.4"
  }
}
