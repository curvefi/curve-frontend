{
  "name": "curve-frontend",
  "version": "2.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "is-ci || husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/load": "19.5.0",
    "cross-env": "^7.0.3",
    "eslint-config-custom": "*",
    "husky": "^9.1.6",
    "is-ci": "^3.0.1",
    "lint-staged": "15.2.10",
    "prettier": "latest",
    "turbo": "^2.1.2",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.5.0",
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "tests/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
