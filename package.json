{
  "name": "curve-frontend",
  "version": "2.1.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "typecheck": "turbo typecheck --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "storybook": "turbo run storybook --filter=curve-ui-kit",
    "storybook:build": "turbo run storybook:build --filter=curve-ui-kit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/load": "19.8.1",
    "@eslint/eslintrc": "*",
    "@eslint/js": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "eslint": "*",
    "eslint-config-custom": "*",
    "eslint-config-turbo": "2.5.5",
    "ethers": "*",
    "husky": "^9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "^3.6.2",
    "react": "*",
    "react-dom": "*",
    "turbo": "^2.5.5",
    "typescript": "*"
  },
  "packageManager": "yarn@4.6.0",
  "lint-staged": {
    "{apps,tests,packages}/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "resolutions": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.32.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "eslint": "9.32.0",
    "ethers": "6.15.0",
    "next": "15.3.5",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "typescript": "5.9.2"
  }
}
