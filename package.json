{
  "name": "curve-frontend",
  "version": "2.1.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --all run build",
    "start": "yarn workspace main start",
    "dev": "yarn workspaces foreach --parallel --interlaced --all run dev",
    "dev-router-api": "yarn workspace router-api dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "yarn workspaces foreach --parallel --all run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "storybook": "yarn workspace curve-ui-kit run storybook",
    "storybook:build": "yarn workspace curve-ui-kit run build:storybook"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/load": "20.1.0",
    "@eslint/eslintrc": "*",
    "@eslint/js": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "bignumber.js": "*",
    "eslint": "*",
    "eslint-config-custom": "*",
    "ethers": "*",
    "husky": "^9.1.7",
    "immer": "*",
    "lint-staged": "16.2.6",
    "lodash": "*",
    "prettier": "^3.6.2",
    "react": "*",
    "react-dom": "*",
    "styled-components": "*",
    "typescript": "*",
    "vite": "*",
    "vitest": "*",
    "zustand": "*"
  },
  "packageManager": "yarn@4.6.0",
  "lint-staged": {
    "{apps,tests,packages}/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "resolutions": {
    "@curvefi/api": "2.68.17",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.0",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "bignumber.js": "9.3.1",
    "eslint": "9.39.0",
    "ethers": "6.15.0",
    "immer": "10.2.0",
    "lodash": "4.17.21",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "styled-components": "6.1.19",
    "typescript": "5.9.3",
    "vite": "7.1.12",
    "vitest": "^4.0.6",
    "esbuild": "0.25.9",
    "path-to-regexp": "6.3.0",
    "zustand": "5.0.8"
  }
}
