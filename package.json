{
  "name": "curve-frontend",
  "version": "2.1.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --all run build",
    "start": "yarn workspace main start",
    "dev": "yarn workspace main dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "yarn workspaces foreach --parallel --all run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "storybook": "yarn workspace curve-ui-kit run storybook",
    "storybook:build": "yarn workspace curve-ui-kit run build:storybook"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/load": "19.8.1",
    "@eslint/eslintrc": "*",
    "@eslint/js": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "eslint": "*",
    "eslint-config-custom": "*",
    "ethers": "*",
    "husky": "^9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "^3.6.2",
    "react": "*",
    "react-dom": "*",
    "typescript": "*",
    "vite": "*",
    "vite-plugin-vercel": "9.0.7"
  },
  "packageManager": "yarn@4.6.0",
  "lint-staged": {
    "{apps,tests,packages}/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "resolutions": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.30.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "eslint": "9.30.1",
    "ethers": "6.14.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "5.8.3",
    "vite": "6.3.5"
  }
}
